{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:@next/next/recommended",
    "prettier"
  ],
  "plugins": ["tailwindcss"],
  "rules": {
    "tailwindcss/classnames-order": "warn",
    "prettier/prettier": 0,
    "no-shadow": "off",
    "@typescript-eslint/no-unnecessary-condition": "off"
  }
}
